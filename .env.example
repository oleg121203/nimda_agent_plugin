# NIMDA Agent Environment Variables Template
# Copy this file to .env and fill in your values

# GitHub settings (required for repository operations)
GITHUB_TOKEN=
GITHUB_USERNAME=
GITHUB_REPO_URL=

# Git configuration (required for commits)
GIT_USER_NAME=
GIT_USER_EMAIL=

# Logging (optional)
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10MB

# API keys (optional, for AI features)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Project settings (optional)
PROJECT_NAME=NIMDA-CLI
PROJECT_VERSION=1.0.0
AUTO_COMMIT=true
AUTO_PUSH=true
CREATE_BACKUPS=true

# Advanced settings (optional)
MAX_RETRIES=3  # Number of retries for subtasks
TIMEOUT_SECONDS=30
ENABLE_DEBUG=false
