# NIMDA Agent Environment Variables Template
# Скопіюйте цей файл у .env та заповніть своїми значеннями

# GitHub налаштування (обов'язково для роботи з репозиторієм)
GITHUB_TOKEN=
GITHUB_USERNAME=
GITHUB_REPO_URL=

# Git конфігурація (обов'язково для комітів)
GIT_USER_NAME=
GIT_USER_EMAIL=

# Логування (опціонально)
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10MB

# API ключі (опціонально, для AI функцій)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Налаштування проекту (опціонально)
PROJECT_NAME=NIMDA-CLI
PROJECT_VERSION=1.0.0
AUTO_COMMIT=true
AUTO_PUSH=true
CREATE_BACKUPS=true

# Розширені налаштування (опціонально)
MAX_RETRIES=3  # Кількість спроб повторного виконання підзадач
TIMEOUT_SECONDS=30
ENABLE_DEBUG=false
